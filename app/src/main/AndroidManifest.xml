<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="false" />

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/livin_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/livin_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.LivinMandiri"
        tools:targetApi="31">
        <activity
            android:name=".pages.InsertionDataCardActivity"
            android:exported="false" />
        <activity
            android:name=".pages.AuthenticationActivity"
            android:exported="false" />
        <activity
            android:name=".pages.VerificationActivity"
            android:exported="false" />
        <activity
            android:name=".pages.LoyaltyActivity"
            android:exported="false" />
        <activity
            android:name=".pages.TermsConditionActivity"
            android:exported="false" />
        <activity
            android:name=".pages.DebitCardSelectionActivity"
            android:exported="false" />

        <receiver
            android:name=".helpers.Notification"
            android:enabled="true" />

        <activity
            android:name=".pages.WelcomeActivity"
            android:exported="false" />
        <activity
            android:name=".pages.CheckStatusActivity"
            android:exported="false" />
        <activity
            android:name=".pages.NewsActivity"
            android:exported="false" />
        <activity
            android:name=".pages.SukhaActivity"
            android:exported="false" />
        <activity
            android:name=".pages.ProductsActivity"
            android:exported="false" />
        <activity
            android:name=".pages.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".pages.QrisActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".pages.MainActivity"
            android:exported="false" />
    </application>

</manifest>