                        android:text="Transfer Valas"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:orientation="vertical"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="8dp">

                    <ImageView
                        android:id="@+id/imgFtr13"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/baseline_money_24" />

                    <TextView
                        android:id="@+id/tvInvestasi2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Investasi"
                        android:textSize="12sp"
                        android:textColor="#666666" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgFtr14"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/baseline_payment_24" />

                    <TextView
                        android:id="@+id/tvQRTerimaTransfer"
                        android:layout_width="wrap_content"
