<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.MainActivity">

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".pages.MainActivity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tvHello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="#00000000"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/profileCard"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardBackgroundColor="#FF6200EE"
                app:cardCornerRadius="50dp"
                app:cardElevation="4dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/profile_icon"
                    />

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/profileText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="start"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@id/profileCard"
                app:layout_constraintTop_toTopOf="@id/profileCard"
                app:layout_constraintBottom_toBottomOf="@id/profileCard">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dika"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:paddingBottom="2dp" />

            <TextView
                android:id="@+id/tvPoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2600 poin >"
                android:textColor="#ffffff"
                />
            </LinearLayout>

            <!-- Icon di pojok kanan -->
            <LinearLayout
                android:id="@+id/rightIcons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/profileCard"
                app:layout_constraintBottom_toBottomOf="@id/profileCard"
                android:layout_marginEnd="0dp">

                <ImageButton
                    android:id="@+id/mailIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/twotone_mail_outline_24"
                    android:layout_marginEnd="12dp" />

                <ImageButton
                    android:id="@+id/settingsIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/outline_settings_24"
                    android:layout_marginEnd="12dp" />

                <ImageButton
                    android:id="@+id/logOutIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/round_logout_24" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



        <com.google.android.material.card.MaterialCardView
        android:id="@+id/accountInfo"
        android:layout_width="370dp"
        android:layout_height="250dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@id/tvHello"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">
        <LinearLayout
            android:id="@+id/tvmain1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvRekening"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rekening"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:padding="8dp" />

            <TextView
                android:id="@+id/tvSaldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saldo"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:padding="8dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tvmain2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvmain1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="8dp">

                <ImageView
                    android:id="@+id/imgFtr1"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/baseline_money_24" />

                <TextView
                    android:id="@+id/tvTabungan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tabungan"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="8dp">

                <ImageView
                    android:id="@+id/imgFtr2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/baseline_money_24" />

                <TextView
                    android:id="@+id/tvDeposito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deposito"
                    android:textSize="12sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="8dp">

                <ImageView
                    android:id="@+id/imgFtr3"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/baseline_payment_24" />

                <TextView
                    android:id="@+id/tvKartuKredit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kartu Kredit"
                    android:textSize="12sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="8dp">

                <ImageView
                    android:id="@+id/imgFtr4"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/baseline_money_24" />

                <TextView
                    android:id="@+id/tvPinjaman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pinjaman"
                    android:textSize="12sp"
                    android:textColor="#666666" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="8dp">

                <ImageView
                    android:id="@+id/imgFtr5"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/baseliner_stacked_bar_chart_24" />

                <TextView
                    android:id="@+id/tvInvestasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Investasi"
                    android:textSize="12sp"
                    android:textColor="#666666" />
            </LinearLayout>
        </LinearLayout>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/containerAccount"
                android:layout_width="335dp"
                android:layout_height="80dp"
                app:cardCornerRadius="20dp"
                app:cardBackgroundColor="#ffffff"
                app:layout_constraintTop_toBottomOf="@id/tvHello"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="10dp"
                tools:ignore="MissingConstraints">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="start"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/tabunganNow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tabungan Now IDR"
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:padding="8dp" />
                    <TextView
                        android:id="@+id/tabungan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rp. 26.000.000"
                        android:textSize="15sp"
                        android:textColor="#666666"
                        android:textStyle="bold"
                        android:padding="8dp" />
                </LinearLayout>
                    <ImageView
                        android:id="@+id/imgCard"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/card1"
                        app:layout_constraintTop_toBottomOf="@id/topNav"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="20dp"
                        />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:id="@+id/btnShwAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semua Tabungan Anda"
                android:textSize="15sp"
                android:textColor="#666666"
                android:textStyle="bold"
                android:padding="8dp"
                app:layout_constraintTop_toBottomOf="@id/containerAccount"
                android:layout_marginTop="5sp"/>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/menu"
        android:layout_width="370dp"
        android:layout_height="250dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="#ffffff"
        app:layout_constraintTop_toBottomOf="@+id/accountInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">
        <LinearLayout
            android:id="@+id/tvmain3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

<!--            <TextView-->
<!--                android:id="@+id/tvNews"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="News"-->
<!--                android:textSize="16sp"-->
<!--                android:textStyle="bold"-->
<!--                android:textColor="#000000"-->
<!--                android:padding="8dp" />-->

            <TextView
                android:id="@+id/tvNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaksi Favorit"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:padding="8dp" />
        </LinearLayout>

            <LinearLayout
                android:id="@+id/tvmain4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvmain1"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgFtr6"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/baseline_money_24" />

                    <TextView
                        android:id="@+id/imgFtr7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:text="Transfer Rupiah"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="12dp">

                    <ImageView
                        android:id="@+id/imgFtr8"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/baseline_money_24" />

                    <TextView
                        android:id="@+id/tvBayarVA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bayar/VA"
                        android:textSize="12sp"
                        android:textColor="#666666" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="12dp">

                    <ImageView
                        android:id="@+id/imgFtr9"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/baseline_payment_24" />

                    <TextView
                        android:id="@+id/tvTopUp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Top-up"
                        android:textSize="12sp"
                        android:textColor="#666666" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="12dp">

                    <ImageView
                        android:id="@+id/imgFtr10"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/baseline_money_24" />

                    <TextView
                        android:id="@+id/tvEMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="e-money"
                        android:textSize="12sp"
                        android:textColor="#666666" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginHorizontal="12dp">

                    <ImageView
                        android:id="@+id/imgFtr11"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/baseliner_stacked_bar_chart_24" />

                    <TextView
                        android:id="@+id/tvSetorTarik"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Setor Tarik"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:textSize="12sp"
                        android:textColor="#666666" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tvmain5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvmain1"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgFtr12"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
