<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.WelcomeActivity">

    <LinearLayout
        android:id="@+id/btnWelcomepg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="30dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="e-money"
            android:backgroundTint="#004c9b"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"/>

        <View
            android:layout_width="150dp"
            android:layout_height="340dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID EN"
            android:backgroundTint="#004c9b"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNoAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Belum Punya Rekening Mandiri"
        android:backgroundTint="#004c9b"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnWelcomepg"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnHaveAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sudah Punya Rekening Mandiri"
        android:textColor="#004c9b"
        android:backgroundTint="#FFFFFF"
        app:strokeColor="#004c9b"
        app:strokeWidth="2dp"
        app:cornerRadius="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnNoAccount"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>